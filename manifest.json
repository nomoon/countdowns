{
  "manifest_version": 2,

  "name": "Countdowns",
  "description": "Final Countdown in browser form",
  "version": "1.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "countdowns.html"
  },
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "background",
    "storage",
    "notifications"
  ]
}
